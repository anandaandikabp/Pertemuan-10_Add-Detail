<div class="container-fluid p-5">
    <div class="row">
        <div class="col-4">
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="../img/ava.png" alt="ava">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= contact.name %>
                        </h5>
                        <p class="card-text">
                            <%= contact.mobile %>
                        </p>
                        <p class="card-text">
                            <%= contact.email %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="jumbotron">
                <h1 class="display-4">Halaman Detail</h1>
                <hr class="my-4">
                <a class="btn btn-primary btn-lg" href="/contact" role="button">Kembali</a>
            </div>
        </div>
    </div>
</div>