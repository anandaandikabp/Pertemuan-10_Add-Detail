<div class="container-fluid p-5">
    <div class="row">
        <div class="col">
            <div class="jumbotron">
                <h1 class="display-4">Halaman Contact</h1>
                <hr class="my-4">
            </div>
            <div class="col">
                <h2>Contact List</h2>
                <!-- menampilkan data dari app -->
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Email</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (contact.length> 1) { %>
                            <% contact.forEach((contact, i)=> { i++ %>
                                <tr>
                                    <th scope="row">
                                        <%= i++ %>
                                    </th>
                                    <td>
                                        <%= contact.name %>
                                    </td>
                                    <td>
                                        <%= contact.email %>
                                    </td>
                                    <td>
                                        <a class="btn btn-primary badge" href="/contact/<%= contact.name %> "
                                            role="button">Detail</a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <p>data tidak ditemukan</p>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>